<h1>Recipes</h1>
<table border="1">
  <% if @recipes.nil? %>

  <% else %>
    <% @recipes.each do |recipe| %>
      <tr>
        <td>
          <%= link_to(image_tag(recipe["image_url"], height: '100', width: '100'), recipe["f2f_url"])%>
        </td>
        <td>
          <%= link_to(sanitize(recipe["title"]), recipe["f2f_url"]) %>
        </td>
        <td>
          <%= recipe["social_rank"] %>
        </td>
      </tr>
    <% end %>
  <%end%>
</table>
